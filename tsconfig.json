{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "build/",
        "module": "esnext",
        "target": "esnext",
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": ".",
        "strict": true,
        "experimentalDecorators": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "keyofStringsOnly": true,
        "plugins": [
            {
                "name": "typescript-styled-plugin"
            }
        ]
    },
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "configs",
        "coverage",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
    ]
}